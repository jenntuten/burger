<div class="jumbotron">
  <h1 class="display-4">EAT-DA-BURGER</h1>
<p class="lead">Pick a burger to devour!</p>

</div>
        <div class="card" id="addBurgerCard">
            <div class="card-header">
                <h4>Add a Burger</h4>
            </div>
            <form>
                <div class="form-group">
                    <label for="bu">Burger Name:</label>
                    <input type="text" id="bu" name="name">
                </div>

                <button type="submit" id="submitBtn">Add Burger</button>
            </form>
        </div>
<div class="card" id="all-burgers">
  
  <div class="burgers" id="not-eaten">
  <h4>Eat da Burger!</h4>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block eat=true}}
    {{/unless}}
  {{/each}}
</div>
</div>
<div class="card">
<h4>Gimme More!</h4>
  <div class="burgers" id="eaten">
  
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block eat=false}}
    {{/if}}
  {{/each}}
</div>
</div>


