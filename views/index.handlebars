<div class="jumbotron">
  <h1 class="display-4">Eat-Da-Burger!</h1>
  <p class="lead">Pick a burger to devour--or add your own!</p>
</div>

<div class="container">
  <div class="card" id="not-eaten">
     <div class="card-header"><h4>Devour!</h4></div>
      {{#each burgers}} {{#unless devoured}} {{> burgers/burger-block eat=true}} {{/unless}} {{/each}}
  </div>
  <div class="card" id="eaten">
    <div class="card-header"><h4>Burgers Already Eaten</h4></div>
      {{#each burgers}} {{#if devoured}} {{> burgers/burger-block eat=false}} {{/if}} {{/each}}
  </div>
</div>

<div class="card" id="addBurgerCard">
  <div class="card-header"><h4>Add a Burger!</h4></div>
  <form class="create-form">
    <div class="form-group">
      <label for="bu">Burger Name:</label>
      <input type="text" id="bu" name="name">
      <button type="submit">Add Burger</button>
    </div>
  </form>
</div>