<div class="jumbotron">
  <h1 class="display-4">Eat-Da-Burger!</h1>
  <p class="lead">Pick a burger to devour--or add your own!</p>
  <form class="create-form">

    <div class="form-group">
      <h4>Add a Burger</h4>
      <label for="bu">Burger Name:</label>
      <input type="text" id="bu" name="name">
    </div>

    <button type="submit">Add Burger</button>
  </form>
</div>


<div class="container">
  <div class="card" id="not-eaten">
      <h4>Eat da Burger!</h4>
      {{#each burgers}} {{#unless devoured}} {{> burgers/burger-block eat=true}} {{/unless}} {{/each}}
  </div>
  <div class="card" id="eaten">
    <h4>Gimme More!</h4>
      {{#each burgers}} {{#if devoured}} {{> burgers/burger-block eat=false}} {{/if}} {{/each}}
  </div>
</div>


</div>