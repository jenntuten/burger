<div class="burgers">
  <h4>Eat da Burger!</h4>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block eat=true}}
    {{/unless}}
  {{/each}}
</div>

<div class="burgers" id="center">
  
</div>

<div class="burgers">
  <h4>Gimme More!</h4>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block eat=false}}
    {{/if}}
  {{/each}}
</div>
<div class="add-burger">
<h4>Add a Burger</h4>
<form class="create-form">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="name">
  </div>
